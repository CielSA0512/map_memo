<%= form_with model: @post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :address, 'スポット名' %><br>
    <%= f.text_field :address, placeholder: "東京スカイツリー", autofocus: true, class: "form-control", autocomplete: "off" %><br>
    <%= f.label :text, "メモ" %><br>
    <%= f.text_area :text, placeholder: "メモ" %><br>
    <%= f.label :image, '思い出の画像' %><br>
    <%= f.file_field :image %><br><br>
  </div>
    <%= f.submit '投稿する' %> 
<% end %>